#!/usr/bin/env zsh

# Make sure to have installed coreutils using `brew install coreutils`.
# Otherwise use `alias ls="ls -lAhGO"` on macOS for the same results.
alias "ls=ls -lAh --color=auto --group-directories-first"

alias k9="kill -9"

# -- misc apps ----------------------------------------------------------------
if [ "${commands[subl]}" ]; then
  alias s=subl
fi

if [ "${commands[yt-dlp]}" ]; then
  alias youtube-dl=yt-dlp
  alias youtube-dl-audio='yt-dlp -f "bestaudio[ext=m4a]/bestaudio[ext=mp3]" --ignore-errors --output "{{- if and (eq .chezmoi.os "linux") (output "uname" "-a" | contains "synology") -}}/volume1/Media{{- else -}}~{{- end -}}/Downloads/%(title)s.%(ext)s"'
fi

if [ "${commands[pip]}" ]; then
  alias pip-outdated='pip list --outdated --format=freeze'
fi

if [ "${commands[ncdu]}" ]; then
{{- if and (eq .chezmoi.os "linux") (output "uname" "-a" | contains "synology") -}}
  alias ncdu='ncdu --color off'
{{- else }}
  alias ncdu='ncdu -xe --color dark'
{{- end }}
fi

if [ "${commands[chezmoi]}" ]; then
  alias cm=chezmoi
fi

if [ "${commands[nvim]}" ]; then
  alias vim=nvim
fi

# Ubuntu uses a different executable name ¯\_(ツ)_/¯
if [ "${commands[batcat]}" ]; then
  alias bat=batcat
fi
