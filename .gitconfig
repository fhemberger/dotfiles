[core]
	autocrlf = input
	excludesfile = .gitignore_global
	quotepath = false
	filemode = false
[alias]
	a = add
	st = status
	ci = commit
	cm = commit -m
	br = branch
	co = checkout
	pl = pull
	cl = clone
	pu = push
	cp = cherry-pick
	stash = stash --include-untracked
	score = shortlog -s -n
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch -a
	remotes = remote -v
[branch "master"]
	remote = origin
	merge = refs/heads/master
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[color "branch"]
	current = green bold
	local = green
	remote = red bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red
[color "sh"]
	branch = yellow
[mergetool]
	keepBackup = true
[credential]
	helper = osxkeychain
[push]
	default = simple
[branch]
	autosetuprebase = always