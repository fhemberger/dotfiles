#!/usr/bin/env bash
# shellcheck disable=SC1091,SC2155
set -euo pipefail

source "$HOME/.config/restic/environment"
source "$HOME/.config/zsh/_wifi.zsh"


trap 'catch $?' EXIT
catch() {
  if [ "$1" != "0" ]; then
    terminal-notifier -title 'Restic Backup' -message 'Backup failed.'
    curl --silent --show-error --fail --output /dev/null -X POST \
      --header 'Content-Type: application/json' \
      --header 'Accept: application/vnd.pagerduty+json;version=2' \
      -d "{
      \"event_action\": \"trigger\",
      \"routing_key\": \"$PAGERDUTY_INTEGRATION_KEY\",
      \"payload\": {
        \"summary\": \"backup failed on $(hostname -s)\",
        \"timestamp\": \"$(date --iso-8601=seconds)\",
        \"source\": \"$(hostname)\",
        \"severity\": \"error\"
      }
    }" https://events.pagerduty.com/v2/enqueue
  fi
}

if [ "$NETWORK_LOCATION" = "home" ]; then
  if ping -c1 -W5 diskstation > /dev/null 2>&1; then
    printf '\n--- [%s] backup\n' "$(date --iso-8601=seconds)" | tee >(cat >&2) > /dev/null

    # Be nice
    # Ref: https://superuser.com/a/42819/1460933
    nice -n 3 restic backup \
      --one-file-system \
      --tag home \
      --exclude-file="${HOME}/.config/restic/exclude.txt" \
      "${HOME}"
  fi
fi
